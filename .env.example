# --- Security ---
SESSION_SECRET=change_me_to_a_long_random_string
ADMIN_USER=admin
# Plain password OR PBKDF2 hash (format: pbkdf2_sha256$<iterations>$<salt_b64>$<hash_b64>)
ADMIN_PASSWORD=change_me

# --- Storage / DB ---
DATA_DIR=/data
DATABASE_URL=sqlite:////data/app.db
MAX_UPLOAD_MB=10

# --- App / UX ---
SITE_NAME=3D Auftragsmanager
DEFAULT_CURRENCY=EUR

# E-Mail Konfiguration
MAIL_USERNAME=deine_email@beispiel.de
MAIL_PASSWORD=dein_passwort_oder_app_password
MAIL_FROM=noreply@beispiel.de
MAIL_PORT=587
MAIL_SERVER=smtp.beispiel.de
MAIL_FROM_NAME="3D Auftragsmanager"
# True für TLS (meistens Port 587), False für SSL (Port 465)
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
